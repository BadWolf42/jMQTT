parameters:
    level: 5

    scanDirectories:
        - ../../core

    paths:
        - core
        - desktop
        - plugin_info
        - resources

    excludePaths:
        analyse:
            - resources/mosquitto_topic_matches_sub.php
            - resources/JsonPath-PHP
            - resources/phpstan-stubs

    ignoreErrors:
        - '#method event::add\(\) invoked with 2 parameters,#'

    stubFiles:
        - resources/phpstan-stubs/jeedom.stub
